{
  "name": "tasks-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "typecheck": "tsc --noEmit",
    "check-imports": "bun ./scripts/import-checker.js",
    "build": "npm run typecheck && npm run check-imports && vite build",
