    "clsx": "^2.1.1",
    "elkjs": "^0.10.0",
    "mrmime": "^2.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.56.3",
    "react-markdown": "^10.1.0",
    "reactflow": "^11.11.4",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.0",
    "wouter": "^3.7.0",
    "zod": "^3.24.4"
