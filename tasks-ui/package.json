{
  "name": "tasks-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "echo 'Please run from root: bun run ui:dev'",
    "dev:api": "echo 'Please run from root: bun run ui:dev:api'",
    "dev:ui": "vite",
    "typecheck": "tsc --noEmit",
    "check-imports": "bun ./scripts/import-checker.js",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "bun server.ts",
    "deploy": "bun run check-imports && bun run build && bun run start",
    "prepare": "cd .. && husky install tasks-ui/.husky",
    "test:api": "bun ./scripts/test-api.js",
    "test:feature-area": "bun ./scripts/test-feature-area-api.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-logs-otlp-http": "^0.201.0",
    "@opentelemetry/sdk-logs": "^0.201.0",
    "@opentelemetry/semantic-conventions": "^1.33.0",
    "@radix-ui/react-checkbox": "^1.3.1",
    "@radix-ui/react-dialog": "^1.1.13",
    "@radix-ui/react-slot": "^1.2.2",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "elkjs": "^0.10.0",
    "lucide-react": "^0.510.0",
    "mermaid": "^11.6.0",
    "mrmime": "^2.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.56.3",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.0",
    "wouter": "^3.7.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@storybook/addon-docs": "^9.0.0",
    "@storybook/addon-onboarding": "^9.0.0",
    "@storybook/react-vite": "^9.0.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.6",
    "@types/bun": "^1.2.13",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^9.0.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "storybook": "^9.0.0",
    "tailwindcss": "^4.1.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
